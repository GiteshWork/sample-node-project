pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/your-repo.git'
            }
        }

        stage('Start Application') {
            steps {
                script {
                    sh 'npm install'  // Install dependencies
                    sh 'node app.js'  // Start the app (modify this based on your entry file)
                }
            }
        }
    }
}
