pipeline {
    agent gitesh_srfc

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/GiteshWork/sample-node-project.git'
            }
        }

        stage('Start Application') {
            steps {
                script {
                    bat 'npm install'  // Install dependencies
                    bat 'node app.js'  // Start the app (modify this based on your entry file)
                }
            }
        }
    }
}
